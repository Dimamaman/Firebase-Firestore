<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uz.gita.dima.firebasefirestorepractise.presenter.screen.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_screen">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="uz.gita.dima.firebasefirestorepractise.presenter.screen.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detail_screen"/>
</navigation>